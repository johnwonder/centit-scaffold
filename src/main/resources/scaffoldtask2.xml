			<property value="1,1,1,1,1,1,0,1,1,0,1" name="instruction" />
			<property name="pdmfile" value="D:/temp/im.pdm" />
			<property name="dbschema" value="" />
			<property name="tables" value="F_WEB_IM_MESSAGE" />
			<property value="D:/Projects/framework/centit-scaffold/src/main/resources/springmvc-mybatis/java" name="javatemplate" />
			<property value="D:/Projects/framework/centit-scaffold/src/main/resources/springmvc-mybatis/page" name="jsptemplate" />
			<property value="true" name="force" />
		</task>
	</tasklist>
</scaffold>