	</properties>

	<!-- mvn deploy -DpomFile=pom.xml -->
	<distributionManagement>
		<repository>
			<id>centit-releases</id>
			<name>centit-release</name>
			<url>http://fileserver.centit.com:8080/nexus/content/repositories/centit-releases/</url>
		</repository>
		<snapshotRepository>
			<id>centit-snapshots</id>
			<name>centit-snapshots</name>
			<url>http://fileserver.centit.com:8080/nexus/content/repositories/centit-snapshots/</url>
